extends ../layouts/main.pug

block styles
  link(rel="stylesheet", href="/styles/user/shop.css")

block header 
  if userLoggedIn
    include ../includes/user-header.pug
  else
    include ../includes/home-header.pug

block content
  h1.text_center Shop 
  if prods.length > 0
    .grid
      each product in prods 
        article.card
          header.card__header
            h1.product__title= product.title
          .card__image
            img( src= product.imageUrl , alt= product.title, srcset="")
          .card__content
            h2.product__price #{product.price}$
            p.product__description=  product.description
          .card__actions
            a(href="/user/view-product/" + product._id).btn View product
            if userLoggedIn
              form(action="/user/add-cart", method="post")
                input(type="hidden", name="_csrf",value= csrfToken)
                input(type="hidden", name="id",value=product._id,id="productId")
                button(type="submit").btn Add to Cart
            else
              input(type="hidden", name="id",value=product._id,id="productId")

  else
    p: b No products yet
block scripts
  script(src="/js/user/shop.js")