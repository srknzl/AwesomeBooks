extends ../layouts/user-main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/user/cart.css")

block content
  h1 Cart
  .products__list
    if entries && entries.length > 0
      each entry in entries 
        article(class="card product-item")
          header.card__header
            h1.product__title= entry.prod.title
          .card__image
            img( src= entry.prod.imageUrl , alt= entry.prod.title, srcset="")
          .card__content
            h2.product__price= entry.prod.price
            p.product__description=  entry.prod.description
            p.product__quantity x#{entry.qty}
          .card__actions
            form(action="/user/add-cart", method="post")
              input(type="hidden", name="id",value=entry.prod.id)
              button(type="submit").btn Add one more
            form(action="/user/remove-from-cart", method="post")
              input(type="hidden", name="id",value=entry.prod.id)
              button.btn(type="submit") Remove one from cart
    else
      p: b No products exist yet
  .checkout__container
    p.price Total price #{price}
    a.checkout__btn.btn Checkout
