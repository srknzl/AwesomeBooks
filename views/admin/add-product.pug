extends ../layouts/admin-main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/admin/add-product.css")

block header
  include ../includes/admin-header.pug

block content
  h2 Add a product
  .messagesContainer
    each error in errors
      p.errorMessage= error
    each success in successes
      p.successMessage= success
    each valMsg in validationMessages
      p.errorMessage= valMsg.msg  
  form.product-form(action="/admin/add-product",method="POST")
    .form-control
      label(for="title") Title
      input(type="text",name="title")#title
    .form-control
      label(for="price") Price
      input(type="number",name="price",step="0.01")#price
    .form-control  
      label(for="imageurl") Image Url
      input(type="text",name="imageUrl")#imageUrl
    .form-control  
      label(for="description") Description
      textarea(name="description",rows="5")
    button.btn(type="submit") Add Product