extends ../layouts/admin-main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/admin/view-product.css")

block header
  include ../includes/admin-header.pug

block content
  article.card
    header.card__header
      h1.product__title= product.title
    .card__image
      img( src= product.imageUrl , alt= product.title, srcset="")
    .card__content
      h2.product__price #{product.price}$
      p.product__description= "Description:  " + product.description
    .card__creator
      p Creator of this product: 
      p: b #{creator.name}
      a(href= "mailto:" + creator.email)=  creator.email 
    .card__actions
      a(href="/admin/edit-product/" + product._id).btn Edit Product
      form(action="/admin/delete-product", method="POST")
        input(type="hidden", name="id",value= product._id)
        button(type="submit").btn Delete Product
  
  